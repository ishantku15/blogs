<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-100 shadow-sm transition-all duration-200">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
    <a href="/" class="flex items-center space-x-2 text-primary-600 hover:text-primary-700 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
        <circle cx="12" cy="12" r="10"/>
        <line x1="12" y1="8" x2="12" y2="16"/>
        <line x1="8" y1="12" x2="16" y2="12"/>
      </svg>
      <span class="text-xl font-semibold">Ishant Webworks Blogs</span>
    </a>
    
    <nav>
      <ul class="flex space-x-6">
        <li><a href="/" class="text-slate-700 hover:text-primary-600 transition-colors">Home</a></li>
        <li><a href="/blog" class="text-slate-700 hover:text-primary-600 transition-colors">Blog</a></li>
        <li><a href="/about" class="text-slate-700 hover:text-primary-600 transition-colors">About</a></li>
      </ul>
    </nav>
  </div>
</header>

<script>
  // Header scroll effect
  const header = document.querySelector('header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header.classList.add('bg-white/95', 'shadow');
      header.classList.remove('bg-white/80');
    } else {
      header.classList.remove('bg-white/95', 'shadow');
      header.classList.add('bg-white/80');
    }
  });
</script>