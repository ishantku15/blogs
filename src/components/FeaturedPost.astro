---
const { post } = Astro.props;
---

<article class="relative bg-white rounded-xl shadow-md overflow-hidden border border-slate-100 mb-12">
  <div class="absolute top-4 left-4 z-10">
    <span class="bg-accent-500 text-white px-3 py-1 rounded-full text-sm font-medium">Featured</span>
  </div>
  <div class="grid md:grid-cols-2 gap-0">
    <div class="overflow-hidden">
      <a href={`/blog/${post.slug}`}>
        <img 
          src={post.thumbnail} 
          alt={post.title} 
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-500 ease-out min-h-[300px]"
        />
      </a>
    </div>
    <div class="p-8 flex flex-col justify-center">
      <div class="flex flex-wrap gap-2 mb-3">
        {post.tags.slice(0, 3).map((tag) => (
          <span class="text-xs px-2 py-1 bg-primary-100 text-primary-700 rounded-full">{tag}</span>
        ))}
      </div>
      <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-3 hover:text-primary-600 transition-colors">
        <a href={`/blog/${post.slug}`}>{post.title}</a>
      </h2>
      <p class="text-slate-600 mb-4">{post.excerpt}</p>
      <div class="mt-auto flex items-center justify-between">
        <div class="flex items-center">
          <span class="text-sm text-slate-500">{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</span>
        </div>
        <a href={`/blog/${post.slug}`} class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium transition-colors">
          Read more
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 ml-1">
            <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</article>